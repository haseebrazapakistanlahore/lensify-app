<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Address"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/close_dialogCustomAddress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="center|end"
            android:layout_marginEnd="20dp"/>


    </FrameLayout>


    <EditText
        android:id="@+id/editText_Address_custom_dialog"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/login_edit_text_back"
        android:drawableStart="@drawable/ic_company_name"
        android:drawablePadding="5dp"
        android:hint="Address"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/editText_city_custom_dialog"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/login_edit_text_back"
        android:drawableStart="@drawable/ic_flag_gray"
        android:drawablePadding="5dp"
        android:hint="City"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/editText_country_custom_dialog"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/login_edit_text_back"
        android:drawableStart="@drawable/ic_location_city_gray"
        android:drawablePadding="5dp"
        android:hint="Country"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="14sp" />





    <Button
        android:id="@+id/btn_proceed_customDialogAddress"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:background="@drawable/login_button_back"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="Proceed"
        android:textColor="@color/white"/>



</LinearLayout>